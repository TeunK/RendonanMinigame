{% extends 'RendonanMiniBundle:Default:index.html.twig' %}

{% block content %}

    <div class="centerPanel">
        <h3>Register:</h3>
        <br/>
        {{ form_start(registerForm) }}
        {{ form_errors(registerForm) }}
        <table class="form_register">
            <tr>
                <td>
                    {{ form_label(registerForm.username) }}
                </td>
                <td>
                    {{ form_widget(registerForm.username, {'attr': {'placeholder': 'Username'} }) }}
                </td>
                <td>
                    {{ form_errors(registerForm.username) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(registerForm.password) }}
                </td>
                <td>
                    {{ form_widget(registerForm.password, {'attr': {'placeholder': 'Password'} }) }}
                </td>
                <td>
                    {{ form_errors(registerForm.password) }}
                </td>
            </tr>
        </table>
        {{ form_end(registerForm) }}



        <!--
        <form action="registerForm.php" method="post">
            Username: <input name="username" type="text"/>
            Password: <input name="password" type="password"/>
            <input type="submit"/>
        </form>
        -->
    </div>

    <div class="centerPanel">
        {% if not online %}
            <h3>Log-In:</h3>
            <form action="{{ path('rendonan_mini_login') }}" method="post">
                <table class="form_register">
                    <tr>
                        <td>
                            <label for="username">username:</label>
                        </td>
                        <td>
                            <input type="text" id="username" name="_username" value=""/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="password">password:</label>
                        </td>
                        <td>
                            <input type="password" name="_password"/>
                        </td>
                    </tr>
                </table>
                <button type="submit"/>Log-in!</button>
            </form>
        {% else %}
            Logged in as: {{ name }} | <a href="{{ path('rendonan_mini_logout') }}">LOGOUT</a>
        {% endif %}
    </div>
{% endblock %}